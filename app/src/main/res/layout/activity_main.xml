<?xml version="1.0" encoding="utf-8"?>
<androidx.constraintlayout.widget.ConstraintLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    tools:context=".ui.MainActivity"
    android:background="@android:color/white">

    <TextView
        android:id="@+id/title_tv"
        android:textColor="@color/blue_categories_title"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:text="@string/categories_title"
        app:layout_constraintLeft_toLeftOf="parent"
        app:layout_constraintRight_toRightOf="parent"
        app:layout_constraintTop_toTopOf="parent" />
    <View
        android:id="@+id/title_v"
        android:layout_width="match_parent"
        android:background="@color/blue_categories_title"
        android:layout_height="1dp"
        android:text="@string/categories_title"
        app:layout_constraintLeft_toLeftOf="parent"
        app:layout_constraintRight_toRightOf="parent"


        app:layout_constraintTop_toBottomOf="@id/title_tv"
        />

    <fragment
        android:id="@+id/main_frag"
        android:layout_width="match_parent"
        android:background="@color/blue_categories_title"
        android:layout_height="wrap_content"
        android:text="@string/categories_title"
        app:layout_constraintLeft_toLeftOf="parent"
        app:layout_constraintRight_toRightOf="parent"

        app:layout_constraintTop_toBottomOf="@id/title_v"
        android:name="com.ghiath.sampleapp.ui.CategoriesFragment"
        />

</androidx.constraintlayout.widget.ConstraintLayout>